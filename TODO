conversations/{conversationId}/
  ├── participants: [userUUID1, userUUID2, ...]  # Array of participant UUIDs
  ├── last_message: {                             # Last message for preview
  │     ├── content: "Hello there!"
  │     ├── sender_id: "userUUID1"
  │     ├── timestamp: January 1, 2024 at 12:00:00 PM UTC-7
  │     └── type: "text"
  │   }
  ├── created_at: January 1, 2024 at 12:00:00 PM UTC-7
  └── updated_at: January 1, 2024 at 12:00:00 PM UTC-7

conversations/{conversationId}/messages/{messageId}/
  ├── sender_id: "userUUID1"                      # Sender's UUID from Django
  ├── sender_name: "John Doe"                     # Sender's display name
  ├── sender_photo_url: "https://..."             # Sender's profile photo
  ├── content: "Hello there!"                     # Message content
  ├── type: "text"                                # text, image, voice
  ├── media_url: "https://..."                    # URL for image/voice files
  ├── timestamp: January 1, 2024 at 12:00:00 PM UTC-7
  └── status: "sent"                              # sent, delivered, read